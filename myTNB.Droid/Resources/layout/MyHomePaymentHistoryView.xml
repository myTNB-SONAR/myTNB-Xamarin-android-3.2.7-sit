<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:theme="@style/Theme.Dashboard"
	android:id="@+id/rootView"
	android:background="@color/lightGrey">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/lightGrey">
		<include
			layout="@layout/toolbar"
			id="@+id/toolbar" />
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:background="@color/lightGrey"
			android:id="@+id/myHomePaymentHistoryScrollView"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/myHomePaymentHistoryContainer">
				<LinearLayout
					android:id="@+id/myHomePaymentHistoryTitleContainer"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:orientation="horizontal"
					android:paddingBottom="12dp">
					<TextView
						android:id="@+id/myHomePaymentHistoryTitle"
						tools:text="My Payment History"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="16dp"
						android:textColor="@color/powerBlue"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/myHomePaymentHistoryListShimmer"
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/bills_list_title_container"
					android:orientation="vertical"
					android:paddingBottom="24dp">
					<RelativeLayout
						android:id="@+id/bill_item_1Shimmer"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<LinearLayout
							android:id="@+id/myHomePaymentHistoryGroupContentShimmer"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="12dp"
							android:paddingTop="26dp"
							android:paddingBottom="14dp"
							android:paddingLeft="16dp"
							android:paddingRight="16dp"
							android:background="@color/white"
							android:orientation="vertical">
							<com.facebook.shimmer.ShimmerFrameLayout
								android:id="@+id/myHomePaymentHistoryListContentShimmer"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_below="@+id/bills_list_title_container">
								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:orientation="horizontal">
									<LinearLayout
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight=".5"
										android:orientation="vertical">
										<View
											android:id="@+id/myHomePaymentHistoryItemTitleShimmer"
											android:background="@color/shimmer_color"
											android:layout_width="100dp"
											android:layout_height="14dp"/>
										<View
											android:id="@+id/myHomePaymentHistoryItemSubTitleShimmer"
											android:background="@color/shimmer_color"
											android:layout_marginTop="6dp"
											android:layout_width="84dp"
											android:layout_height="8dp"/>
									</LinearLayout>
									<LinearLayout
										android:layout_width="0dp"
										android:layout_height="match_parent"
										android:layout_weight=".5"
										android:gravity="center|right"
										android:orientation="horizontal">
										<View
											android:id="@+id/myHomePaymentHistoryItemAmountShimmer"
											android:layout_width="66dp"
											android:layout_height="20dp"
											android:background="@color/shimmer_color"
											android:layout_marginRight="12dp"/>
										<ImageView
											android:id="@+id/myHomePaymentHistoryRightArrowShimmer"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:src="@drawable/expand_right_arrow"
											android:contentDescription=""/>
									</LinearLayout>
								</LinearLayout>
							</com.facebook.shimmer.ShimmerFrameLayout>
							<View
								android:id="@+id/myHomePaymentHistoryGroupContentSeparatorShimmer"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:layout_marginTop="6dp"
								android:layout_marginBottom="6dp"
								android:background="@android:color/transparent"/>
						</LinearLayout>
					</RelativeLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/myHomePaymentHistoryList"
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"/>
				<LinearLayout
					android:id="@+id/myHomePaymentHistoryEmptyContainer"
					android:visibility="gone"
					tools:visibility="visible"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/bills_list_title_container"
					android:orientation="vertical"
					android:background="@color/white"
					android:paddingTop="24dp"
					android:paddingBottom="24dp">
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:src="@drawable/empty_bills_history"
						android:contentDescription=""/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textSize="14dp"
						android:layout_marginTop="16dp"
						android:layout_marginLeft="32dp"
						android:layout_marginRight="32dp"
						android:lineSpacingExtra="6dp"
						android:id="@+id/myHomePaymentHistoryEmptyMessage"
						tools:text="Looks like you have no bills yet! Once you do, your bills and payment history will appear here."/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/myHomePaymentHistoryRefreshContainer"
					android:visibility="gone"
					tools:visibility="visible"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/bills_list_title_container"
					android:orientation="vertical"
					android:background="@color/white"
					android:paddingTop="24dp"
					android:paddingBottom="24dp">
					<ImageView
						android:layout_width="69dp"
						android:layout_height="64dp"
						android:layout_gravity="center"
						android:id="@+id/myHomePaymentHistoryRefreshImg"
						android:src="@drawable/refresh_1"
						android:contentDescription=""/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textSize="12dp"
						android:layout_marginTop="16dp"
						android:layout_marginLeft="32dp"
						android:layout_marginRight="32dp"
						android:lineSpacingExtra="2dp"
						android:textColor="#8b8b8b"
						android:id="@+id/myHomePaymentHistoryRefreshMessage"
						tools:text="Uh oh, looks like your bill/payment history have been unplugged. Refresh to stay plugged in!"/>
					<Button
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						tools:text="Refresh Now"
						android:id="@+id/btnMyHomePaymentHistoryRefresh"
						style="@style/Theme.RefreshButton" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>