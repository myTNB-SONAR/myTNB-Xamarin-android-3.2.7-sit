<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/txtApplicationStatusHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/silverChalice"
        android:textSize="10dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="2dp"
        android:textAllCaps="true"
        android:text="APPLICATION NUMBER"/>
    <TextView
        android:id="@+id/txtApplicationStatusDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tunaGrey"
        android:textSize="14dp"
        android:lineSpacingExtra="3dp"
        android:layout_marginBottom="6dp"
        android:text="NC-100-456-7800"/>
</LinearLayout>
