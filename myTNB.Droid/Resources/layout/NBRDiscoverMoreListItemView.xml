<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingTop="17dp"
	android:background="@color/white">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:id="@+id/dicoverMoreItemView">
		<TextView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:background="@drawable/yellow_circle_active"
			android:textSize="12dp"
			android:textColor="@color/charcoalGrey"
			android:gravity="center"
			android:text="1"
			android:id="@+id/nbrDiscoverMoreNumber" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:textColor="@color/charcoalGrey"
			android:text="Your account’s bill summary"
			android:id="@+id/nbrDiscoverMoreTitle" />
	</LinearLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="17dp"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
		android:id="@id/nbrDiscoverMoreBanner" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="17dp"
		android:textColor="@color/charcoalGrey"
		android:id="@+id/nbrDiscoverMoreContent" />
</LinearLayout>
