<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:theme="@style/Theme.Dashboard"
	android:background="@android:color/transparent"
	android:id="@+id/rootView">
	<LinearLayout
		android:id="@+id/myTNBDrawerBottomSheet"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:gravity="bottom"
		android:layout_height="match_parent"
		segmentedgroup:layout_behavior="@string/bottom_sheet_behavior"
		segmentedgroup:behavior_hideable="true"
		segmentedgroup:behavior_peekHeight="500dp">
		<LinearLayout
			android:id="@+id/myTNBDrawer"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:background="@drawable/rectangle_rounded_corner_bg"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingBottom="40dp"
			android:minHeight="200px"
			android:layout_marginBottom="@dimen/_minus10sdp">
			<RelativeLayout
				android:id="@+id/myTNBDrawerTitleLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_10sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:visibility="visible">
				<TextView
					android:id="@+id/myTNBDrawerTitle"
					android:layout_width="match_parent"
					android:layout_height="24dp"
					android:gravity="center_vertical"
					android:layout_marginRight="28dp"
					android:textColor="@color/powerBlue"
					android:textSize="16dp"
					android:ellipsize="end"
					android:singleLine="false"
					android:maxLines="1"
					tools:text="myDrawer"/>
				<ImageView
					android:id="@+id/myTNBDrawerCloseIcon"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:visibility="visible"
					android:scaleType="fitXY"
					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true"
					android:background="@drawable/ic_action_delete"
					android:contentDescription=""/>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/myTNBDrawerContainer">
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/myTNBDrawerList"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
