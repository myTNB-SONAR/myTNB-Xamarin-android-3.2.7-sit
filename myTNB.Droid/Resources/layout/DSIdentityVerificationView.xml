<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:theme="@style/Theme.Dashboard"
	android:id="@+id/rootView"
	android:background="@color/lightGrey">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/lightGrey"
		android:layout_marginBottom="10dp">
		<include
			layout="@layout/toolbar"
			id="@+id/toolbar" />
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:background="@android:color/transparent"
			android:id="@+id/identityVerificationScrollView"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/lightGrey"
				android:id="@+id/identityVerificationContainer">
				<TextView
					tools:text="Here's how it works:"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:textColor="@color/powerBlue"
					android:id="@+id/identityVerificationTitle" />
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:layout_marginTop="8dp"
					android:id="@+id/identityVerificationListContainer">
				</LinearLayout>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/white"
					android:layout_marginTop="9dp"
					android:id="@+id/identityVerificationBottomContainer">
					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/white"
						android:visibility="gone"
						tools:visibility="visible"
						android:id="@+id/dsIdVerifShimmerContainer">
						<com.facebook.shimmer.ShimmerFrameLayout
							android:id="@+id/dsIdVerifShimmerContentShimmer"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@color/white"
							android:layout_marginRight="16dp"
							android:layout_marginLeft="16dp">
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical">
								<View
									android:background="@color/shimmer_color_second"
									android:layout_marginTop="16dp"
									android:layout_width="match_parent"
									android:layout_height="30dp"/>
								<View
									android:background="@color/shimmer_color_second"
									android:layout_marginTop="16dp"
									android:layout_width="match_parent"
									android:layout_height="100dp"/>
								<View
									android:background="@color/shimmer_color_second"
									android:layout_width="match_parent"
									android:layout_height="20dp"
									android:layout_marginTop="16dp"
									android:layout_marginBottom="16dp"/>
							</LinearLayout>
						</com.facebook.shimmer.ShimmerFrameLayout>
					</LinearLayout>
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingBottom="16dp"
						android:visibility="gone"
						tools:visibility="visible"
						android:id="@+id/dsIdVerifBottomInfoContainer">
						<TextView
							android:id="@+id/dsIdVerifInfoTitle"
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							tools:text="Have your identification ready!"
							android:text="Have your identification ready!"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:layout_marginTop="16dp"
							android:textColor="@color/charcoalGrey"
							android:textSize="16dp"
							android:lineSpacingExtra="3dp"
							android:textAlignment="textStart"/>
						<TextView
							android:id="@+id/dsIdVerifInfoMessage"
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							android:textColor="@color/charcoalGrey"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:layout_marginTop="12dp"
							tools:text="Before you begin, get your Identification Type ready."
							android:text="Before you begin, get your Identification Type ready."
							android:textSize="12dp"
							android:lineSpacingExtra="3dp"
							android:textAlignment="textStart"/>
						<LinearLayout
							android:orientation="vertical"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:id="@+id/dsIdVerifInfoDropdownContentLayout">
							<TextView
								android:id="@+id/dsIdVerifInfoDropdownTitle"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								tools:text="Have your identification ready!"
								android:text="Have your identification ready!"
								android:layout_marginLeft="0dp"
								android:layout_marginRight="32dp"
								android:layout_marginTop="14dp"
								android:textColor="@color/powerBlue"
								android:textSize="12dp"
								android:lineSpacingExtra="3dp"
								android:textAlignment="textStart"
								android:layout_gravity="left"/>
							<TextView
								android:id="@+id/dsIdVerifInfoDropdownMessage"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:textColor="@color/charcoalGrey"
								android:layout_marginTop="10dp"
								android:layout_marginLeft="0dp"
								android:layout_marginBottom="8dp"
								android:layout_marginRight="16dp"
								tools:text="Before you begin, get your Identification Type ready."
								android:text="Before you begin, get your Identification Type ready."
								android:textSize="12dp"
								android:lineSpacingExtra="3dp"
								android:textAlignment="textStart"
								android:layout_gravity="left"
								android:visibility="visible"
								tools:visibility="visible"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="9dp"
					android:layout_marginBottom="9dp"
					android:visibility="gone"
					tools:visibility="visible"
					android:background="@color/white"
					android:id="@+id/identityVerificationPrivacyPolicyContainer">
					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="8dp"
						android:layout_marginTop="9dp"
						android:layout_marginBottom="9dp"
						android:weightSum="1">
						<CheckBox
							android:id="@+id/checkboxCondition"
							android:layout_weight="0.1"
							android:layout_height="wrap_content"
							android:layout_width="0dp"
							android:layout_gravity="center|left"
							android:button="@drawable/checkbox_selector"/>
						<LinearLayout
							android:orientation="vertical"
							android:layout_width="0dp"
							android:layout_weight="0.9"
							android:layout_marginTop="9dp"
							android:layout_marginBottom="9dp"
							android:layout_height="wrap_content">
							<TextView
								android:id="@+id/dsIdVerificationPrivacyPolicy"
								android:text="By confirming"
								android:textAppearance="?android:attr/textAppearanceSmall"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:textSize="12dp"
								android:textColorLink="@color/powerBlue"
								android:layout_gravity="fill_vertical"
								android:paddingRight="8dp"
								android:layout_marginStart="5dp"
								android:layout_marginEnd="8dp"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:visibility="gone"
			tools:visibility="visible"
			android:id="@+id/dsIdVerifButtonShimmerContainer">
			<com.facebook.shimmer.ShimmerFrameLayout
				android:id="@+id/dsIdVerifShimmerContentShimmer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:layout_marginRight="16dp"
				android:layout_marginLeft="16dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<View
						android:background="@color/shimmer_color_second"
						android:layout_width="match_parent"
						android:layout_height="48dp"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="16dp"/>
				</LinearLayout>
			</com.facebook.shimmer.ShimmerFrameLayout>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="16dp"
			android:paddingLeft="16dp"
			android:paddingBottom="16dp"
			android:paddingRight="16dp"
			android:gravity="center|bottom"
			android:background="@color/white"
			android:visibility="gone"
			tools:visibility="visible"
			android:id="@+id/identityVerificationButtonLayout">
			<Button
				android:id="@+id/identityVerificationBtnContinue"
				tools:text="Continue"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				style="@style/DisabledButton"
				android:textAllCaps="false"
				android:enabled="false"/>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
