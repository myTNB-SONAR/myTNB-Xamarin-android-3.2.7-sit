<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:layout_width="match_parent"
	android:layout_marginLeft="18dp"
	android:layout_marginRight="18dp"
	android:layout_height="wrap_content">
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="18dp"
		android:layout_marginRight="18dp">
		
					<RelativeLayout
					android:id="@+id/dialogHeaderTransparent"
					android:layout_width="match_parent"
					android:layout_height= "50dp"
					android:layout_marginTop= "50dp"
					android:background="@color/white"/>
					<ImageView
					android:id="@+id/dialogHeaderImg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scaleType="center"
					android:src="@drawable/maintenance_bcrm_v2"/>

	</RelativeLayout>
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="8dp"
		app:cardBackgroundColor="@color/white"
		app:cardElevation="0dp"
		android:layout_marginLeft="18dp"
		android:layout_marginRight="18dp">
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:background="@color/white"
			android:id="@+id/mytnbDialogScrollView"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/rootView">
				<TextView
					android:id="@+id/dialogHeaderTitle"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="We’ll Be Right Shortly!"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginTop="16dp"
					android:textColor="@color/powerBlue"
					android:textSize="16dp"
					android:lineSpacingExtra="3dp"
					android:gravity="center"/>
				<TextView
					android:id="@+id/dialogMessage"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:textColor="@color/charcoalGrey"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginTop="12dp"
					android:maxLines="12"
					android:scrollbars="vertical"
					android:text="Dear valued customer,

myTNB system maintenance is currently in 
progress. We’ll be right back at 6.30 AM on 15 April 2023 (Saturday)

For bill payment, you can use alternative payment channels such as JomPAY (Biller code: 5454, Ref-1: 12-digit TNB A/C number). Boost or Touch’n Go eWallet; or various online banking websites (Payee: Tenaga Nasional Berhad)"
					android:textSize="14dp"
					android:lineSpacingExtra="3dp"/>
					<View
						android:layout_height="1dp"
						android:layout_width="match_parent"
						android:alpha="0.2"
						android:layout_marginTop="8dp"
						android:background="@color/tunaGrey" />
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/txtBtnFirst"
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							android:layout_alignParentLeft="true"
							android:layout_toLeftOf="@+id/divider"
							android:gravity="center"
							android:textColor="@color/powerBlue"
							android:layout_marginTop="16dp"
							android:paddingBottom="16dp"
							android:text="@string/itemized_bill_got_it"
							android:textSize="16dp" />
					</RelativeLayout>
			</LinearLayout>
		</ScrollView>
	</androidx.cardview.widget.CardView>
