<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:layout_width="match_parent"
	android:layout_marginLeft="18dp"
	android:layout_marginRight="18dp"
	android:layout_height="wrap_content">
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="8dp"
		app:cardBackgroundColor="@color/white"
		app:cardElevation="0dp">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rootView">
			<ImageView
				android:id="@+id/imgToolTipHeader"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:src="@drawable/maintenance_bcrm_new"
				android:layout_marginBottom="16dp"/>
			<TextView
				android:id="@+id/txtToolTipTitle"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="We’ll Be Right Shortly!"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:layout_marginTop="16dp"
				android:textColor="@color/powerBlue"
				android:textSize="16dp"
				android:lineSpacingExtra="3dp"
				android:gravity="center"/>
			<ScrollView
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:overScrollMode="never"
				android:scrollbars="none"
				android:fillViewport="true"
				android:background="@color/white"
				android:id="@+id/mytnbDialogScrollView"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrollView">
					<TextView
						android:id="@+id/txtToolTipMessage"
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:textColor="@color/tunaGrey"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:scrollbars="vertical"
						tools:text="Be the first to make an impact today and choose to go paperless for your next bill onwards! With myTNB, you have a better and more environmentally friendly way to receive your paperless bills digitally via myTNB App and Portal."
						android:textSize="14dp"
						android:lineSpacingExtra="3dp"/>
				</LinearLayout>
			</ScrollView>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:clickable="true"
				android:id="@+id/btnFirst">
				<View
					android:layout_height="1dp"
					android:layout_width="match_parent"
					android:alpha="0.2"
					android:background="@color/tunaGrey" />
				<TextView
					android:id="@+id/txtToolTipCTA"
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:gravity="center"
					android:textColor="@color/powerBlue"
					android:layout_marginTop="16dp"
					android:paddingBottom="18dp"
					android:text="Close"
					android:textSize="16dp" />
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
