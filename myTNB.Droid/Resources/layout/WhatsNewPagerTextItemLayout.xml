<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView 
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/whatsNewDialogCardView"
            android:elevation="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/whatsNewDialogLinearView">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/whatsNewDialogMainView">
                        <LinearLayout 
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="180dp"
                          android:visibility="visible"
                          android:id="@+id/whatsNewMainShimmerImgLayout">
                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerWhatsNewImageLayout"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent">
                                <ImageView
                                android:id="@+id/whatsNewShimmerImg"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shimmer_rectangle"/>
                            </com.facebook.shimmer.ShimmerFrameLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/image_whatsnew"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:src="@drawable/ic_banner_whatsnewdialog"/>
                        <TextView
                            android:id="@+id/txtWhatsNewTitle"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:text="Uploading from your album?"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/tunaGrey"
                            android:textSize="14dp"
                            android:lineSpacingExtra="3dp"/>
                        <TextView
                            android:id="@+id/txtWhatsNewMessage"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/tunaGrey"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:maxLines="8"
                            android:scrollbars="vertical"
                            android:text="Be sure to upload a clear, straight-facing photo of the entire meter box with no shadows, reflections or flashes and the image can’t be skewed. Any of these may cause the value to be unreadable."
                            android:textSize="14dp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                    <LinearLayout 
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="4dp">
                        <android.support.v7.widget.CardView 
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/white"
                            android:elevation="0dp">
                            <CheckBox
                            android:id="@+id/chk_remember_me"
                            android:layout_height="20dp"
                            android:layout_width="wrap_content"
                            android:checked="false"
                            android:paddingLeft="8dp"
                            android:layout_margin="5dp"
                            android:text="Don't show this again"
                            android:textColor="@color/tunaGrey"
                            android:textSize="12dp"
                            android:button="@drawable/checkbox_selector" />
                        </android.support.v7.widget.CardView >
                    </LinearLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tunaGrey" />
                    <LinearLayout
                        android:id="@+id/layout_btn_holder"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:background="#D8D8D8"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnWhatsNewGotIt"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:textSize="16dp"
                            android:textColor="@color/powerBlue"
                            android:textAllCaps="false"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/btn_details"
                            android:layout_weight="1" />
                    </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>