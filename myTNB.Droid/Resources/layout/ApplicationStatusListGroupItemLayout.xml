<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_gravity="left|start">
            <TextView
                android:id="@+id/applicationStatusItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tunaGrey"
                android:textSize="12dp"
                android:text="Change Tariff"/>
            <TextView
                android:id="@+id/applicationStatusItemSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/receipt_note_text"
                android:textSize="12dp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="SR: 10045678"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center|right"
            android:visibility="visible"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applicationStatusItemRightLayout"
                android:visibility="visible"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/applicationStatusItemStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/freshGreen"
                    android:text="Payment Required"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|right"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="3dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="1dp"
                        android:visibility="gone"
                        android:id="@+id/applicationStatusItemNewIndicator"
                        android:src="@drawable/ic_notifications_unread"/>
                    <TextView
                        android:id="@+id/applicationStatusItemDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#8b8b8b"
                        android:text="16 Jul 2019"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/applicationStatusItemRightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expand_right_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/applicationStatusItemGroupContentSeparator"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/platinumGrey"/>
</LinearLayout>
