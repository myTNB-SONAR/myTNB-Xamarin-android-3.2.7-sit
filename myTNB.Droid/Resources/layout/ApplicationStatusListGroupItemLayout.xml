<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/white">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/appicationStatusListMainLayout"
		android:padding="16dp">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:orientation="vertical"
			android:layout_gravity="left|start">
			<TextView
				android:id="@+id/applicationStatusItemTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/tunaGrey"
				android:textSize="12dp"
				android:text="Change Tariff"/>
			<TextView
				android:id="@+id/applicationStatusItemSubTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:textColor="@color/receipt_note_text"
				android:textSize="12dp"
				android:singleLine="true"
				android:maxLines="1"
				android:ellipsize="end"
				android:text="SR: 10045678"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:gravity="right"
			android:layout_gravity="center_vertical"
			android:visibility="visible"
			android:orientation="horizontal">
			<androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/billRelatedContraint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
							android:gravity="center"
                            android:layout_gravity="center_vertical">
				<ImageView
					android:layout_width="16dp"
					android:layout_height="16dp"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginTop="1dp"
					android:visibility="visible"
					android:layout_gravity="center_vertical"
					android:id="@+id/applicationStatusItemNewIndicator"
					app:layout_constraintRight_toRightOf="@+id/applicationStatusItemStatus"
					android:src="@drawable/ic_notifications_unread"/>

			       
				<TextView
					android:id="@+id/applicationStatusItemStatus"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:textSize="12dp"
					android:lineSpacingExtra="2dp"
					android:textColor="@color/freshGreen"
					android:gravity="right"
					android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@+id/applicationStatusItemNewIndicator"
					android:ellipsize="end"
					android:text="Payment Required"/>
			</androidx.constraintlayout.widget.ConstraintLayout>

			
		</LinearLayout>
		<ImageView
				android:id="@+id/applicationStatusItemRightArrow"
				android:layout_width="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:src="@drawable/expand_right_arrow"/>
	</LinearLayout>
	<View
		android:id="@+id/applicationStatusItemGroupContentSeparator"
		android:visibility="visible"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/platinumGrey"/>
</LinearLayout>
