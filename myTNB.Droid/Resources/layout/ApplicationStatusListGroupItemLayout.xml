<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/white">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/appicationStatusListMainLayout"
		android:padding="16dp">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:orientation="vertical"
			android:layout_gravity="left">
			<TextView
				android:id="@+id/applicationStatusItemTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/tunaGrey"
				android:textSize="12dp"
				android:text="Change Tariff"/>
			<TextView
				android:id="@+id/applicationStatusItemSubTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:textColor="@color/receipt_note_text"
				android:textSize="12dp"
				android:singleLine="true"
				android:maxLines="1"
				android:ellipsize="end"
				android:text="UI-ASR-000-000-03600"/>
		</LinearLayout>
		<android.support.constraint.ConstraintLayout
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="0.5"
			android:gravity="center_vertical|right"
			android:id="@+id/constraintParent"
			android:visibility="visible">
			<ImageView
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:scaleType="fitXY"
				android:layout_marginTop="1dp"
				android:visibility="visible"
				android:id="@+id/applicationStatusItemNewIndicator"
				android:src="@drawable/ic_notifications_unread"
				app:layout_constraintEnd_toStartOf="@+id/applicationStatusItemStatus"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:contentDescription="description" />
			<TextView
				android:id="@+id/applicationStatusItemStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dp"
				android:textColor="@color/freshGreen"
				android:gravity="right"
				android:layout_gravity="center_vertical"
				android:maxLines="2"
				android:ellipsize="end"
				android:text="UI - Payment Required"
				app:layout_constraintEnd_toStartOf="@+id/applicationStatusItemRightArrow"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginRight="16dp"
				android:maxWidth="110dp"
				android:paddingStart="0dp"
				android:paddingEnd="0dp"
				android:paddingLeft="0dp"
				android:paddingRight="0dp"
				android:lineSpacingExtra="0dp"
				android:singleLine="false"
				android:includeFontPadding="false"/>
			<ImageView
				android:id="@+id/applicationStatusItemRightArrow"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="center_vertical"
				android:src="@drawable/expand_right_arrow"
				android:contentDescription="description"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
		</android.support.constraint.ConstraintLayout>
	</LinearLayout>
	<View
		android:id="@+id/applicationStatusItemGroupContentSeparator"
		android:visibility="visible"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/platinumGrey"/>
</LinearLayout>