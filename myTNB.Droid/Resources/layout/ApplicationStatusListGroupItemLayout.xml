<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/white">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/appicationStatusListMainLayout"
		android:padding="16dp">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:orientation="vertical"
			android:layout_gravity="left">
			<TextView
				android:id="@+id/applicationStatusItemTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/tunaGrey"
				android:textSize="12dp"
				android:text="Change Tariff"/>
			<TextView
				android:id="@+id/applicationStatusItemSubTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:textColor="@color/receipt_note_text"
				android:textSize="12dp"
				android:singleLine="true"
				android:maxLines="1"
				android:ellipsize="end"
				android:text="UI-ASR-000-000-03600"/>
		</LinearLayout>
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:gravity="center_vertical|right"
			android:visibility="visible"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/applicationStatusItemRightLayout"
				android:visibility="visible"
				android:gravity="right"
				
				android:orientation="horizontal">
				<ImageView
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:layout_toLeftOf="@+id/applicationStatusItemStatus"
					android:scaleType="fitXY"
					android:layout_marginTop="1dp"
					android:visibility="visible"
					android:id="@+id/applicationStatusItemNewIndicator"
					android:src="@drawable/ic_notifications_unread"/>
				<TextView
					android:id="@+id/applicationStatusItemStatus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12dp"
					android:layout_alignParentLeft="true"
					android:layout_toRightOf="@+id/applicationStatusItemNewIndicator"
					android:textColor="@color/freshGreen"
					android:gravity="right"
				    android:weightSum="0"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="3dp"
					android:maxLines="2"
					android:text="Payment Required"/>
				<ImageView
				android:id="@+id/applicationStatusItemRightArrow"
				android:layout_marginLeft="16dp"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="center_vertical"
				android:src="@drawable/expand_right_arrow"/>
			</LinearLayout>
			
		</RelativeLayout>
	</LinearLayout>
	<View
		android:id="@+id/applicationStatusItemGroupContentSeparator"
		android:visibility="visible"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/platinumGrey"/>
</LinearLayout>