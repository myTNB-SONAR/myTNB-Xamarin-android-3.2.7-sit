<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"          
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="18dp"
          android:layout_marginRight="18dp"
          android:layout_gravity="center"
          android:background="@drawable/custom_round_white_dialog_shadow"
          android:id="@+id/rootView">
        <ImageView
            android:id="@+id/imgToolTipHeader"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/ic_idnotcompleted"/>
        <TextView
            android:id="@+id/txtToolTipTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Complete your myTNB profile now for a better myTNB experience!"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/tunaGrey"
            android:textSize="14dp"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:id="@+id/txtToolTipMessage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/tunaGrey"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="9dp"
            android:maxLines="12"
            android:scrollbars="vertical"
            android:text="Your identification number is not captured in your myTNB profile, update it now to have better access and controls over your electricity accounts!"
            android:textSize="14dp"
            android:lineSpacingExtra="3dp"/>
        <View
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:alpha="0.2"
            android:background="@color/tunaGrey" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBtnPrimary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divider"
                android:gravity="center"
                android:textColor="@color/powerBlue"
                android:padding="16dp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Update"
                android:textSize="16dp" />
        </RelativeLayout>
       </LinearLayout>
</LinearLayout>
