<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/rootView">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ResetPasswordSuccessWhiteBackground"
                android:orientation="vertical"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">


                <ImageView
                    android:id="@+id/reset_password_success_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="7.2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_display_successful_new" />

                <TextView
                    android:id="@+id/txtTitleInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10.2dp"
                    android:text="Thank you for your submission!"
                    android:textColor="@color/powerBlue"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtContentInfo"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Your rating will help us serve you better."
                    android:textColor="@color/tunaGrey"
                    android:textSize="14dp" />
   
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonBackToHome"
                    style="@style/WhiteButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:text="Back to Home" />

                <Button
                    android:id="@+id/btnViewSubmitted"
                    style="@style/WhiteButton1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:text="View Submitted Enquiry" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
