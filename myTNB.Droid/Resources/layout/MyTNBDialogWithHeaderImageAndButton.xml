<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:layout_width="match_parent"
	android:layout_marginLeft="18dp"
	android:layout_marginRight="18dp"
	android:layout_height="wrap_content">
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="8dp"
		app:cardBackgroundColor="@color/white"
		app:cardElevation="0dp"
		android:layout_marginLeft="18dp"
		android:layout_marginRight="18dp">
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:background="@color/white"
			android:id="@+id/mytnbDialogScrollView"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/rootView">
				<ImageView
					android:id="@+id/dialogHeaderImg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY"
					android:adjustViewBounds="true"
					android:src="@drawable/img_tooltip_reward_confirm"/>
				<TextView
					android:id="@+id/dialogHeaderTitle"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Go paperless with myTNB Bill today!"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginTop="16dp"
					android:textColor="@color/charcoalGrey"
					android:textSize="16dp"
					android:lineSpacingExtra="3dp"/>
				<TextView
					android:id="@+id/dialogTitle"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Thank you for your understanding"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginTop="16dp"
					android:textColor="@color/charcoalGrey"
					android:textSize="16dp"
					android:lineSpacingExtra="3dp"/>
				<TextView
					android:id="@+id/dialogMessage"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:textColor="@color/charcoalGrey"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginTop="12dp"
					android:maxLines="12"
					android:scrollbars="vertical"
					android:text="Be the first to make an impact today and choose to go paperless for your next bill onwards! With myTNB, you have a better and more environmentally friendly way to receive your paperless bills digitally via myTNB App and Portal. "
					android:textSize="14dp"
					android:lineSpacingExtra="3dp"/>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="24dp"
					android:paddingBottom="24dp"
					android:paddingLeft="32dp"
					android:paddingRight="32dp"
					android:id="@+id/dialogPrimaryBtnLayout">
					<Button
						android:id="@+id/dialogPrimaryBtn"
						android:text="View More"
						android:layout_width="match_parent"
						android:layout_height="44dp"
						style="@style/BlueButton"
						android:textAllCaps="false" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</androidx.cardview.widget.CardView>
</LinearLayout>
