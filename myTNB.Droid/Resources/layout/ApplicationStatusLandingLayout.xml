<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="beforeDescendants"
    android:theme="@style/Theme.SMRApplication"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        id="@+id/toolbar" />
    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        android:background="@color/greyBackground">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/applicationStatusLandingNestedScrollView"
            android:fillViewport="false">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/applicationStatusMainLayout">
                    <!-- Header: My Application Status-->
                    
                  <!-- Looks like you have no applications at the moment.-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/applicationStatusLandingEmptyLayout"
                        android:visibility="visible"
                        android:background="@color/white">
                        <ImageView
                            android:id="@+id/applicationStatusLandingEmptyImg"
                            android:layout_height="80dp"
                            android:layout_width="83.2dp"
                            android:layout_marginTop="32dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_application_status_empty"/>
                        <TextView
                            android:id="@+id/txtApplicationStatusLandingEmpty"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8b8b8b"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="Looks like you have no applications at the moment."
                            android:textSize="14dp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                  <!--ShimmerLayout-->
                    <LinearLayout
                        android:id="@+id/applicationStatusLandingShimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        
                        android:background="@color/white">
                        <RelativeLayout
                            android:id="@+id/applicationStatusLandingShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/applicationStatusLandingGroupContentShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                
                                
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/applicationStatusLandingListContentShimmer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_width="130dp"
                                                android:layout_height="20dp"/>
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_marginTop="6dp"
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center|right"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:gravity="center|right">
                                            <View
                                                
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginRight="12dp"/>
                                            <View
                                               
                                                android:layout_width="100dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                    android:layout_marginTop="6dp"
                                                android:layout_marginRight="12dp"/>
                                                </LinearLayout>
                                            <ImageView
                                                
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/expand_right_arrow"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                                <View
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:background="@color/platinumGrey"/>
                                <com.facebook.shimmer.ShimmerFrameLayout
                                   
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_width="130dp"
                                                android:layout_height="20dp"/>
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_marginTop="6dp"
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center|right"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:gravity="center|right">
                                            <View
                                                
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginRight="12dp"/>
                                            <View
                                               
                                                android:layout_width="100dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                    android:layout_marginTop="6dp"
                                                android:layout_marginRight="12dp"/>
                                                </LinearLayout>
                                            <ImageView
                                                
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/expand_right_arrow"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                                <View
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:background="@color/platinumGrey"/>
                                <com.facebook.shimmer.ShimmerFrameLayout
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_width="130dp"
                                                android:layout_height="20dp"/>
                                            <View
                                                
                                                android:background="@color/shimmer_color"
                                                android:layout_marginTop="6dp"
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center|right"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:gravity="center|right">
                                            <View
                                                
                                                android:layout_width="110dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginRight="12dp"/>
                                            <View
                                               
                                                android:layout_width="100dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                    android:layout_marginTop="6dp"
                                                android:layout_marginRight="12dp"/>
                                                </LinearLayout>
                                            <ImageView
                                                
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/expand_right_arrow"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                                <View
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="16dp"
                                    
                                    android:background="@color/platinumGrey"/>
                                
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/applicationStatusLandingRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                     </LinearLayout>

                    <!--View More-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:clickable="true"
                        android:id="@+id/viewMoreContainer">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="16dp">
                            <TextView
                                android:id="@+id/viewMoreLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/receipt_note_text"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="View More"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/ic_action_expand_down_gray"
                                android:id="@+id/viewMoreImg"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/platinumGrey"/>
                    </LinearLayout>
                </LinearLayout>

                <!--Refresh screen-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#f9f8f8"
                    android:visibility="gone"
                    android:paddingBottom="10dp"
                    android:id="@+id/applicationStatusRefreshContainer">
                    <ImageView
                        android:id="@+id/refreshImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-35dp"
                        android:foregroundGravity="center_horizontal|center"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_application_status" />
                    <TextView
                        android:id="@+id/refreshMsg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uh oh, looks like this page is unplugged. Refresh to stay plugged in!"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:lineSpacingExtra="3dp"
                        android:textSize="16dp"
                        android:textColor="#8b8b8b"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Refresh Now"
                        android:id="@+id/btnRefresh"
                        style="@style/Theme.RefreshButton" />
                </LinearLayout>

                <!--Popup: How do I see all my applications  ?-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:id="@+id/mappicatinPopup">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white">
                <LinearLayout
                    android:id="@+id/ApplicationStatusTooltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_rounded_corner_light_blue_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/info_blue"
                        android:layout_marginRight="8dp"
                        android:id="@+id/ApplicationStatsTooltipImg"/>
                        <TextView
                            android:id="@+id/txtApplicationStatsTooltip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/powerBlue"
                            android:textSize="12dp"
                            android:layout_gravity="right|center_vertical"
                            android:text="How do I see all my applications  ?"/>
                </LinearLayout>
                </LinearLayout>
                    </LinearLayout>
            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

        <!--Button: Search Application Status-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/applicationStatusLandingBottomLayout">
            <ImageView
                android:id="@+id/shadow_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:background="@drawable/shadow_effect" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/white"
				android:layout_marginTop="0.0dp">
				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Search Application Status"
					android:id="@+id/btnSearchApplicationStatus"
					android:layout_marginTop="16dp"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_marginBottom="16dp"
					style="@style/Theme.ApplicationStatusLandingButton" />
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
