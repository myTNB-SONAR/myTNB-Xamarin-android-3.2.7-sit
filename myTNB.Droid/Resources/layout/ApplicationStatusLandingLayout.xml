<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="beforeDescendants"
    android:theme="@style/Theme.SMRApplication"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        id="@+id/toolbar" />
    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        android:background="@color/greyBackground">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/applicationStatusLandingNestedScrollView"
            android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/applicationStatusMainLayout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/applicationStatusLandingTitleLayout">
                        <TextView
                            android:id="@+id/txtApplicationStatusLandingTitle"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/powerBlue"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="My Application Status"
                            android:textSize="16dp"
                            android:lineSpacingExtra="4dp"/>
                        <ImageView
                            android:id="@+id/applicationStatusLandingFilterImg"
                            android:layout_height="16dp"
                            android:layout_width="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/bill_screen_filter_icon"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/applicationStatusLandingEmptyLayout"
                        android:visibility="gone"
                        android:background="@color/white">
                        <ImageView
                            android:id="@+id/applicationStatusLandingEmptyImg"
                            android:layout_height="80dp"
                            android:layout_width="83.2dp"
                            android:layout_marginTop="32dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_application_status_empty"/>
                        <TextView
                            android:id="@+id/txtApplicationStatusLandingEmpty"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8b8b8b"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="Looks like you have no applications at the moment."
                            android:textSize="14dp"
                            android:lineSpacingExtra="3dp"/>
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Search Application Status"
                            android:id="@+id/btnEmptySearchApplicationStatus"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="32dp"
                            style="@style/Theme.ApplicationStatusLandingButton" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/applicationStatusLandingShimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingBottom="24dp">
                        <RelativeLayout
                            android:id="@+id/applicationStatusLandingShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/applicationStatusLandingGroupContentShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:paddingTop="26dp"
                                android:paddingBottom="14dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/applicationStatusLandingListContentShimmer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                            <View
                                                android:id="@+id/applicationStatusLandingItemTitleShimmer"
                                                android:background="@color/shimmer_color"
                                                android:layout_width="100dp"
                                                android:layout_height="14dp"/>
                                            <View
                                                android:id="@+id/applicationStatusLandingItemSubTitleShimmer"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginTop="6dp"
                                                android:layout_width="84dp"
                                                android:layout_height="8dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center|right"
                                            android:orientation="horizontal">
                                            <View
                                                android:id="@+id/applicationStatusLandingItemAmountShimmer"
                                                android:layout_width="66dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginRight="12dp"/>
                                            <ImageView
                                                android:id="@+id/applicationStatusLandingRightArrowShimmer"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/expand_right_arrow"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                                <View
                                    android:id="@+id/itemisedBillingGroupContentSeparatorShimmer"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:background="@android:color/transparent"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/applicationStatusLandingRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:clickable="true"
                        android:id="@+id/viewMoreContainer">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="16dp">
                            <TextView
                                android:id="@+id/viewMoreLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/receipt_note_text"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="View More"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/ic_action_expand_down_gray"
                                android:id="@+id/viewMoreImg"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/platinumGrey"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/projectStatusMainLayout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/projectStatusLandingTitleLayout">
                        <TextView
                            android:id="@+id/txtProjectStatusLandingTitle"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/powerBlue"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="My Project Status"
                            android:textSize="16dp"
                            android:lineSpacingExtra="4dp"/>
                        <ImageView
                            android:id="@+id/projectStatusLandingFilterImg"
                            android:layout_height="16dp"
                            android:layout_width="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/bill_screen_filter_icon"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/projectStatusLandingEmptyLayout"
                        android:visibility="gone"
                        android:background="@color/white">
                        <ImageView
                            android:id="@+id/projectStatusLandingEmptyImg"
                            android:layout_height="80dp"
                            android:layout_width="83.2dp"
                            android:layout_marginTop="32dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_application_status_empty"/>
                        <TextView
                            android:id="@+id/txtProjectStatusLandingEmpty"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8b8b8b"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="Looks like you have no applications at the moment."
                            android:textSize="14dp"
                            android:lineSpacingExtra="3dp"/>
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Search Application Status"
                            android:id="@+id/btnEmptySearchProjectStatus"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="32dp"
                            style="@style/Theme.ApplicationStatusLandingButton" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/projectStatusLandingShimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingBottom="24dp">
                        <RelativeLayout
                            android:id="@+id/projectStatusLandingShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/projectStatusLandingGroupContentShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:paddingTop="26dp"
                                android:paddingBottom="14dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/projectStatusLandingListContentShimmer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                            <View
                                                android:id="@+id/projectStatusLandingItemTitleShimmer"
                                                android:background="@color/shimmer_color"
                                                android:layout_width="100dp"
                                                android:layout_height="14dp"/>
                                            <View
                                                android:id="@+id/projectStatusLandingItemSubTitleShimmer"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginTop="6dp"
                                                android:layout_width="84dp"
                                                android:layout_height="8dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center|right"
                                            android:orientation="horizontal">
                                            <View
                                                android:id="@+id/projectStatusLandingItemAmountShimmer"
                                                android:layout_width="66dp"
                                                android:layout_height="20dp"
                                                android:background="@color/shimmer_color"
                                                android:layout_marginRight="12dp"/>
                                            <ImageView
                                                android:id="@+id/projectStatusLandingRightArrowShimmer"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/expand_right_arrow"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.facebook.shimmer.ShimmerFrameLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:background="@android:color/transparent"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/projectStatusLandingRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:clickable="true"
                        android:id="@+id/viewMoreProjectContainer">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="16dp">
                            <TextView
                                android:id="@+id/viewMoreProjectLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/receipt_note_text"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="View More"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/ic_action_expand_down_gray"
                                android:id="@+id/viewMoreProjectImg"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/platinumGrey"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/applicationStatusLandingBottomLayout">
            <ImageView
                android:id="@+id/shadow_layout"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:background="@drawable/shadow_effect" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Application Status"
                    android:id="@+id/btnSearchApplicationStatus"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    style="@style/Theme.ApplicationStatusLandingButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
