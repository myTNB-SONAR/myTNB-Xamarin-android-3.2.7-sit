<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true"
	android:orientation="vertical"
	android:theme="@style/Theme.Enquiry">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:id="@+id/enquiryAccountDetailsContainer">
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/txtEnquiryAcctDetailsFullNameLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="12dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="4dp"
			app:counterEnabled="false"
			app:counterMaxLength="250"
			app:errorEnabled="true"
			app:errorTextAppearance="@style/TextInputLayoutFeedbackCount"
			app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
			android:background="@color/white">
			<EditText
				android:id="@+id/txtEnquiryAcctDetailsFullName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/placeholder_name"
				android:hint="FULL NAME"
				android:importantForAutofill="noExcludeDescendants"
				android:inputType="text|textMultiLine"
				android:maxLength="250"
				android:maxLines="1"
				android:overScrollMode="always"
				android:paddingTop="5dp"
				android:scrollbarStyle="insideInset"
				android:scrollbars="vertical"
				android:textSize="16dp" />
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/txtEnquiryAcctDetailsEmailLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			app:counterEnabled="false"
			app:counterMaxLength="250"
			app:errorEnabled="true"
			app:errorTextAppearance="@style/TextInputLayoutFeedbackCount"
			app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
			android:background="@color/white">
			<EditText
				android:id="@+id/txtEnquiryAcctDetailsEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/placeholder_email"
				android:hint="EMAIL ADDRESS"
				android:importantForAutofill="noExcludeDescendants"
				android:inputType="text|textMultiLine"
				android:maxLength="250"
				android:maxLines="1"
				android:overScrollMode="always"
				android:paddingTop="5dp"
				android:scrollbarStyle="insideInset"
				android:scrollbars="vertical"
				android:textSize="16dp" />
		</com.google.android.material.textfield.TextInputLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:orientation="vertical"
			android:padding="16dp">
			<LinearLayout
				android:id="@+id/enquiryAcctDetailsLMobileNumContainer"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_marginBottom="23dp"/>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
