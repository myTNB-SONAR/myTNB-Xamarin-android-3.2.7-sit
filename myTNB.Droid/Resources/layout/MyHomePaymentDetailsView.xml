<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:theme="@style/Theme.Dashboard"
	android:id="@+id/rootView"
	android:background="@color/lightGrey">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/lightGrey">
		<include
			layout="@layout/toolbar"
			id="@+id/toolbar" />
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:background="@color/lightGrey"
			android:id="@+id/myHomePaymentDetailsScrollView"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/myHomePaymentDetailsContainer">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:padding="16dp"
					android:background="@color/white"
					android:orientation="vertical"
					android:id="@+id/myHomePaymentDetailsAccountContainer">
					<TextView
						android:id="@+id/myHomePaymentDetailsAccountName"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						tools:text="My House"
						android:textColor="#49494a"
						android:textSize="14dp"/>
					<TextView
						android:id="@+id/myHomePaymentDetailsAccountAddress"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						tools:text="No. 3 Jalan Melur, 12 Taman Melur, 68000 Ampang, Selangor"
						android:textColor="#49494a"
						android:textSize="12dp"/>
				</LinearLayout>
				<TextView
					android:id="@+id/myHomePaymentDetailsMyChargesTitle"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:paddingLeft="16dp"
					android:paddingBottom="8dp"
					tools:text="My Charges"
					android:textColor="@color/powerBlue"
					android:textSize="16dp"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:padding="16dp"
					android:id="@+id/myHomePaymentDetailsDetailLayout"
					android:orientation="vertical">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/myHomePaymentDetailsAccountChargeLabel"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="left"
							android:textColor="#49494a"
							tools:text="My outstanding charges"
							android:textSize="14dp"/>
						<TextView
							android:id="@+id/myHomePaymentDetailsAccountChargeValue"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="right"
							tools:text="RM 0.00"
							android:textColor="#49494a"
							android:textSize="14dp"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/myHomePaymentDetailsAccountBillThisMonthLabel"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="left"
							tools:text="My latest bill"
							android:textColor="#49494a"
							android:textSize="14dp"/>
						<TextView
							android:id="@+id/myHomePaymentDetailsAccountBillThisMonthValue"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="right"
							tools:text="RM 0.00"
							android:textColor="#49494a"
							android:textSize="14dp"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:orientation="horizontal"
						android:id="@+id/myHomePaymentDetailsRoundingAdjustmentLayout"
						android:visibility="gone"
						tools:visibility="visible">
						<TextView
							android:id="@+id/myHomePaymentDetailsRoundingAdjustmentLabel"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="left"
							tools:text="Rounding Adjustment"
							android:textColor="#49494a"
							android:textSize="14dp"/>
						<TextView
							android:id="@+id/myHomePaymentDetailsRoundingAdjustmentValue"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:gravity="right"
							tools:text="RM 0.00"
							android:textColor="#49494a"
							android:textSize="14dp"/>
					</LinearLayout>
					<myTNB_Android.Src.CompoundView.ExpandableTextViewComponent
						android:id="@+id/myHomePaymentDetailsOtherChargesExpandableView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"/>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:paddingTop="16dp"
						android:paddingBottom="16dp"
						android:background="@color/platinumGrey"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="16dp"
						android:weightSum="1"
						android:orientation="horizontal">
						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.9"
							android:gravity="center|left"
							android:orientation="vertical">
							<TextView
								android:id="@+id/myHomePaymentDetailsAccountPayAmountLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:lineSpacingExtra="3dp"
								android:gravity="left|center"
								tools:text="I need to pay"
								android:textColor="#49494a"
								android:textSize="14dp"/>
							<TextView
								android:id="@+id/myHomePaymentDetailsAccountPayAmountDate"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:gravity="left|center"
								tools:text="by 24 Sep 2019"
								android:textColor="#49494a"
								android:textSize="14dp"/>
						</LinearLayout>
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="0.1"
							android:layout_gravity="right|center"
							android:gravity="right"
							android:orientation="horizontal">
							<TextView
								android:id="@+id/myHomePaymentDetailsAccountPayAmountCurrency"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginRight="5dp"
								tools:text="RM"
								android:textColor="#49494a"
								android:textSize="12dp"/>
							<TextView
								android:id="@+id/myHomePaymentDetailsAccountPayAmountValue"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								tools:text="420.00"
								android:textColor="#49494a"
								android:textSize="24dp"/>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/myHomePaymentDetailsAccountMinChargeLabelContainer"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:paddingLeft="2dp"
						android:background="@drawable/rectangle_rounded_corner_light_blue_bg"
						android:gravity="center|left"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/myHomePaymentDetailsAccountMinChargeLabel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="12dp"
							android:textColor="#1c79ca"
							android:drawablePadding="8dp"
							tools:text="This account has a minimum charge."
							android:drawableLeft="@drawable/smr_why_accounts_info"
							android:gravity="center_vertical"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/myHomePaymentDetailsInfoLabelContainerDetailEPP"
						android:layout_width="match_parent"
						android:visibility="gone"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:paddingLeft="2dp"
						android:background="@drawable/rectangle_rounded_corner_light_blue_bg"
						android:gravity="center|left"
						android:orientation="horizontal"
						tools:visibility="visible">
						<TextView
							android:id="@+id/myHomePaymentDetailsInfoLabelDetailEPP"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="11dp"
							android:textColor="#1c79ca"
							android:drawablePadding="8dp"
							tools:text="What about Easy Payment Plan (EPP)?"
							android:drawableLeft="@drawable/smr_why_accounts_info"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/myHomePaymentDetailsPaymentMethodsContainer"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp">
						<TextView
							android:id="@+id/myHomePaymentDetailsCreditDebitCardTitle"
							android:text="@string/credit_debit_card"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="18dp"
							android:paddingTop="16dp"
							android:paddingBottom="16dp"
							android:textColor="@color/blue" />
						<ListView
							android:id="@+id/myHomePaymentDetailsListAddedCards"
							android:layout_height="wrap_content"
							android:layout_width="match_parent"
							android:divider="@android:color/transparent"
							android:dividerHeight="4.0dp"
							android:visibility="gone"
							tools:visibility="visible"/>
						<Button
							style="@style/Theme.AddCardButton"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/add_card"
							android:drawableLeft="@drawable/ic_add_card"
							android:drawablePadding="4dp"
							android:layout_marginTop="4dp"
							android:padding="16dp"
							android:gravity="center_vertical|left"
							android:id="@+id/myHomePaymentDetailsBtnAddCard" />
					</LinearLayout>
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp">
						<TextView
							android:id="@+id/myHomePaymentDetailsOtherPaymentTitle"
							android:text="@string/other_payment_methods"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="18dp"
							android:paddingBottom="16dp"
							android:textColor="@color/blue" />
						<Button
							style="@style/Theme.OnlinePaymentButton"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/fpx_online_payment"
							android:drawableLeft="@drawable/fpx"
							android:drawablePadding="4dp"
							android:padding="16dp"
							android:gravity="center_vertical|left"
							android:id="@+id/myHomePaymentDetailsBtnFPXPayment" />
					</LinearLayout>
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp">
						<TextView
							android:id="@+id/myHomePaymentDetailsTNGPaymentTitle"
							android:text="eWallet"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="18dp"
							android:paddingBottom="16dp"
							android:textColor="@color/blue" />
						<Button
							style="@style/Theme.OnlinePaymentButton"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/fpx_online_payment"
							android:drawablePadding="4dp"
							android:padding="16dp"
							android:gravity="center_vertical|left"
							android:id="@+id/myHomePaymentDetailsBtnTNGPayment" />
					</LinearLayout>
				</LinearLayout>
				<View
					android:id="@+id/overlay"
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:background="#c0000000" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>