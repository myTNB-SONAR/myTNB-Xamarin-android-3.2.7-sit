<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/greyBackground">
                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_selector_pressable"
                android:padding="16dp">
                <TextView
                    android:id="@+id/txtTitlePremise"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Let's add your account by selecting your account type."
                    android:textSize="14dp"
                    android:textColor="@color/tunaGrey"
                    android:layout_margin="10dp" />
                <TextView
                    android:text="THIS PREMISE I'M ADDING IS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAccountType"
                    android:textSize="10dp"
                    android:textColor="@color/silverChalice"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="5dp" />
                <TextView
                    android:id="@+id/selector_account_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tunaGrey"
                    android:textSize="14dp"
                    android:paddingRight="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="6dp"
                    android:layout_marginBottom="2dp"
                    android:text="Selected Type"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="5dp"
                    android:drawablePadding="4dp"
                    android:background="?attr/editTextBackground"
                    android:drawableRight="@drawable/ic_action_dropdown1"/>
