<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:theme="@style/Theme.Dashboard"
    android:id="@+id/rootView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@color/lightGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
            android:id="@+id/smrReadingHistoryDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ssmr_meter_reading_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:paddingBottom="16dp"
                android:background="@color/white">
                <ImageView
                android:id="@+id/itemisedBillingHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_marginTop="-35dp"
                android:foregroundGravity="center_horizontal|center"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/bill_menu_loading_banner"/>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/itemisedBillingInfoShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                    android:id="@+id/itemisedParentContainerShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">
                        <TextView
                        android:id="@+id/itemisedBillingInfoNoteShimmer"
                        android:background="@color/shimmer_color"
                        android:layout_width="122dp"
                        android:layout_height="20dp"
                        android:gravity="center"/>
                        <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/shimmer_color"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        </LinearLayout>
                        <TextView
                        android:id="@+id/itemisedBillingInfoDatShimmer"
                        android:layout_marginTop="8dp"
                        android:background="@color/shimmer_color"
                        android:layout_width="98dp"
                        android:layout_height="20dp"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <LinearLayout
                android:id="@+id/itemisedBillingInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:orientation="vertical">
                    <TextView
                    android:id="@+id/itemisedBillingInfoNote"
                    android:text="I’ve cleared all bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:gravity="center"/>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/itemisedBillingInfoAmountCurrency"
                            android:text="RM"
                            android:textSize="16dp"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/itemisedBillingInfoAmount"
                            android:text="200.00"
                            android:textSize="36dp"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                    android:id="@+id/itemisedBillingInfoDate"
                    android:text="by 24 Sep 2019"
                    android:layout_marginTop="8dp"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/itemisedBillingCTAContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnViewDetails"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:text="View Details"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        style="@style/LightButtonWithIcon"/>
                    <Button
                        android:id="@+id/btnPayBill"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:text="Pay"
                        android:textSize="16dp"
                        android:textAllCaps="false"
                        style="@style/DarkButton1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bills_list_title_container"
                android:layout_below="@+id/ssmr_meter_reading_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/myBillHistoryTitle"
                    android:text="My History"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#1c79ca"/>
                <ImageView
                    android:id="@+id/bill_filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bill_screen_filter_icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemisedBillingListShimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bills_list_title_container"
                android:orientation="vertical"
                android:paddingBottom="24dp">
                <RelativeLayout
                    android:id="@+id/bill_item_1Shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/itemisedBillingGroupContentShimmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingTop="26dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/itemisedBillingListContentShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bills_list_title_container">
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">
                                <View
                                    android:id="@+id/itemisedBillingItemTitleShimmer"
                                    android:background="@color/shimmer_color"
                                    android:layout_width="100dp"
                                    android:layout_height="16dp"/>
                                <View
                                    android:id="@+id/itemisedBillingItemSubTitleShimmer"
                                    android:background="@color/shimmer_color"
                                    android:layout_width="84dp"
                                    android:layout_height="16dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:gravity="center|right"
                                android:orientation="horizontal">
                                <View
                                    android:id="@+id/itemisedBillingItemAmountShimmer"
                                    android:layout_width="60dp"
                                    android:layout_height="16dp"
                                    android:background="@color/shimmer_color"
                                    android:layout_marginRight="12dp"/>
                                <ImageView
                                    android:id="@+id/itemisedBillingRightArrowShimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/expand_right_arrow"/>
                            </LinearLayout>
                        </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <View
                            android:id="@+id/itemisedBillingGroupContentSeparatorShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/platinumGrey"/>
                    </LinearLayout>
                    <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/itemisedBillingListGroupLabelShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/itemisedBillingGroupLabelShimmer"
                                android:layout_width="70dp"
                                android:layout_height="24dp"
                                android:background="@color/shimmer_color"
                                android:layout_marginLeft="16dp"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemisedBillingList"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bills_list_title_container"
                android:orientation="vertical"
                android:paddingBottom="24dp"/>
            <LinearLayout
                android:id="@+id/emptyItemisedBillingList"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bills_list_title_container"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/empty_bills_history"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:lineSpacingExtra="6dp"
                        android:id="@+id/emptyBillingHistoryMessage"
                        android:text="Looks like you have no bills yet! Once you do, your bills and payment history will appear here."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accountSelection"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="My House"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f9f8f8"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:id="@+id/unavailableBillContainer">
                <ImageView
                    android:id="@+id/unavailableBillBannerImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:foregroundGravity="center_horizontal|center"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_application_status" />
                <TextView
                    android:id="@+id/unavailableBillMsg"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uh oh, looks like this page is unplugged. Refresh to stay plugged in!"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14dp"
                    android:textColor="#8b8b8b"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Refresh Now"
                    android:id="@+id/btnRefresh"
                    style="@style/Theme.RefreshButton" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>