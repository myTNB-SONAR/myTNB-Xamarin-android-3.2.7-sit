<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgApplicationStatusDone"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:visibility="visible"
            android:src="@drawable/application_status_done_indication" />
        <ImageView
            android:id="@+id/imgApplicationStatusOther"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:src="@drawable/img_application_status_in_progress" />
        <ImageView
            android:id="@+id/imgApplicationStatusnNew"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:visibility="gone"
            android:src="@drawable/img_application_status_new" />
        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/applicationStatusLine"
            android:background="#20bd4c" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="21dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/tunaGrey"
            android:id="@+id/txtApplicationStatusDetailWord"
            android:text="Connection Charges Calculated" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="2dp"
            android:visibility="gone"
            android:textColor="@color/powerBlue"
            android:id="@+id/txtApplicationStatusDetailCTA"
            android:text="View Detailed Progress" />
    </LinearLayout>
</LinearLayout>
