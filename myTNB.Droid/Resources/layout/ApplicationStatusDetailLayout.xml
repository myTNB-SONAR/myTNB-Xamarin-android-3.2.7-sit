<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="beforeDescendants"
    android:theme="@style/Theme.SMRApplication"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        id="@+id/toolbar" />
    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        android:background="@color/greyBackground">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/applicationStatusDetailNestedScrollView"
            android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:id="@+id/applicationStatusNonProgressLayout">
                    <TextView
                        android:id="@+id/txtApplicationStatusTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="16dp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="2dp"
                        android:text="Status: Action Required"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="14dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:text="for Start Electricity"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="12dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="8dp"
                        android:text="You can take the action to continue or update your application using the myTNB Portal."/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:id="@+id/applicationStatusDetailNonLoginLayout">
                    <TextView
                        android:id="@+id/txtApplicationStatusNumberHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/silverChalice"
                        android:textSize="10dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="2dp"
                        android:textAllCaps="true"
                        android:text="APPLICATION NUMBER"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusNumberDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="14dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginBottom="6dp"
                        android:text="NC-100-456-7800"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusDateHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/silverChalice"
                        android:textSize="10dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                        android:textAllCaps="true"
                        android:text="Creation Date"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusDateDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="14dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginBottom="6dp"
                        android:text="16 Jul 2019"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusDetailNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="12dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="6dp"
                        android:text="Save this application to keep track of its up-to-date status in My Applications."/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/white"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/shadow_layout"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:background="@drawable/shadow_effect" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="1"
                android:background="@color/white">
                <Button
                    android:id="@+id/btnSaveApplication"
                    android:text="Save Application"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    style="@style/Theme.PayButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
