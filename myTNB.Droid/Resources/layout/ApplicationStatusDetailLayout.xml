<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="beforeDescendants"
    android:theme="@style/Theme.SMRApplication"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        id="@+id/toolbar" />
    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        android:background="@color/greyBackground">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/applicationStatusDetailNestedScrollView"
            android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:id="@+id/applicationStatusMainStatusLayout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtApplicationStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tunaGrey"
                            android:textSize="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="2dp"
                            android:text="Status: "/>
                        <TextView
                            android:id="@+id/txtApplicationStatusMainTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tunaGrey"
                            android:textSize="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="2dp"
                            android:text="Action Required"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtApplicationStatusSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="14dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:text="for Start Electricity"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="14dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:text="Last Updated"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="visible"
                        android:id="@+id/applicationStatusLine"
                        android:background="@color/platinumGrey" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/applicationStatusStatusListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        android:paddingBottom="-5dp"
                        android:scrollIndicators="none" />
                    <TextView
                        android:id="@+id/txtApplicationStatusDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="12dp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="You can take the action to continue or update your application using the myTNB Portal."/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:id="@+id/applicationStatusDetailNonLoginLayout">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/applicationStatusStatusListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:scrollIndicators="none"
                        android:paddingBottom="-6dp"/>
                    <TextView
                        android:id="@+id/txtApplicationStatusDetailNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tunaGrey"
                        android:textSize="12dp"
                        android:lineSpacingExtra="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="6dp"
                        android:text="Save this application to keep track of its up-to-date status in My Applications."/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/paymentReceiptLayout"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">
                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:background="@color/platinumGrey" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7">
                                <TextView
                                    android:id="@+id/txtApplicationStatusHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/silverChalice"
                                    android:textSize="10dp"
                                    android:lineSpacingExtra="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:textAllCaps="true"
                                    android:text="30 jun - payment"/>
                                <TextView
                                    android:id="@+id/txtApplicationStatusDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/tunaGrey"
                                    android:textSize="14dp"
                                    android:lineSpacingExtra="3dp"
                                    android:text="RM 493.00"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_gravity="center"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/txtViewReceipt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/powerBlue"
                                    android:textSize="12dp"
                                    android:clickable="true"
                                    android:lineSpacingExtra="2dp"
                                    android:text="View Receipt"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="8dp"
                            android:background="@color/platinumGrey" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctaSelection"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:paddingLeft="2dp"
                            android:background="@drawable/rectangle_rounded_corner_light_blue_bg"
                            android:gravity="center|left"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/howDoISeeApplicaton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="#1c79ca"
                                android:drawablePadding="8dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="How do I see my full application details?"
                                android:drawableLeft="@drawable/smr_why_accounts_info"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/white"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/shadow_layout"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:background="@drawable/shadow_effect" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/txtApplicationStatusBottomNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/charcoalGrey"
                    android:textSize="14dp"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:text="Save this application to keep track of its up-to-date status in My Applications."/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/applicationStatusBotomPayableLayout"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtApplicationStatusBottomPayableTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:text="@string/dashboard_need_pay"
                        android:textColor="@color/charcoalGrey"
                        android:textSize="15dp"
                        android:lineSpacingExtra="3dp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">
                        <TextView
                            android:id="@+id/txtApplicationStatusBottomPayable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:text="0.00"
                            android:textColor="@color/tunaGrey"
                            android:textSize="25dp" />
                        <TextView
                            android:id="@+id/txtApplicationStatusBottomPayableCurrency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtApplicationStatusBottomPayable"
                            android:layout_alignBottom="@+id/txtApplicationStatusBottomPayable"
                            android:layout_toLeftOf="@+id/txtApplicationStatusBottomPayable"
                            android:layout_toStartOf="@+id/txtApplicationStatusBottomPayable"
                            android:text="RM"
                            android:layout_marginRight="7dp"
                            android:textColor="@color/tunaGrey"
                            android:textSize="13dp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:id="@+id/applicationStatusDetailSingleButtonLayout"
                    android:background="@color/white">
                    <Button
                        android:id="@+id/btnSaveApplication"
                        android:text="Save Application"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        style="@style/Theme.PayButton" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:id="@+id/applicationStatusDetailDoubleButtonLayout"
                    android:background="@color/white">
                    <Button
                        android:id="@+id/btnApplicationStatusViewBill"
                        style="@style/Theme.ViewBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/dashboard_chartview_view_bill"
                        android:textAllCaps="false" />
                    <Button
                        android:id="@+id/btnApplicationStatusPay"
                        style="@style/Theme.PayButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:text="@string/dashboard_chartview_pay"
                        android:textAllCaps="false"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
