<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
	android:orientation="vertical">
	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar" />
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="?actionBarSize"
		android:background="@color/lightGrey">
		<ScrollView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:overScrollMode="never"
			android:scrollbars="none"
			android:fillViewport="true"
			android:id="@+id/gslStepOneScrollView"
			android:layout_height="wrap_content"
			android:background="@color/background_pale_grey">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/statusLinearLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:background="@color/white">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:orientation="vertical">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<TextView
								android:id="@+id/txtGSLDetailStatusTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Status:"
								android:textAllCaps="false"
								android:textColor="@color/charcoalGrey"
								android:textSize="16dp" />
							<TextView
								android:id="@+id/txtGSLDetailStatusValue"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:text="Submitted"
								android:textAllCaps="false"
								android:textSize="16dp"
								android:textColor="@color/charcoalGrey"/>
						</LinearLayout>
						<TextView
							android:id="@+id/txtGSLDetailRebateType"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="for GSL 1: Frequency of Interruption"
							android:textAllCaps="false"
							android:textColor="@color/charcoalGrey"
							android:textSize="14dp" />
						<View
							android:id="@+id/barLine"
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:layout_marginTop="16dp"
							android:layout_marginBottom="16dp"
							android:background="@color/platinumGrey" />
						<com.google.android.material.textfield.TextInputLayout
							android:layout_marginBottom="16dp"
							android:id="@+id/txtGSLDetailServiceReqNumLayout"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:errorEnabled="false"
							app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small">
							<EditText
								android:id="@+id/editTxtGSLDetailServiceReqNum"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="@android:color/transparent"
								android:drawablePadding="6dp"
								android:enabled="false"
								android:focusable="false"
								android:hint="SERVICE REQUEST NUMBER"
								android:importantForAutofill="noExcludeDescendants"
								android:inputType="text"
								android:maxLines="1"
								android:paddingTop="5dp" />
						</com.google.android.material.textfield.TextInputLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:id="@+id/gslDetailContactLinearLayout">
					<TextView
						android:id="@+id/txtGSLDetailContactTitle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="16dp"
						android:layout_weight="1"
						android:text="Your Contact Details"
						android:textAllCaps="false"
						android:textColor="@color/powerBlue"
						android:textSize="16dp" />
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:background="@color/white"
						android:layout_marginTop="16dp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:orientation="vertical">
							<com.google.android.material.textfield.TextInputLayout
								android:layout_marginTop="16dp"
								android:id="@+id/txtGSLDetailContactFullNameLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small">
								<EditText
									android:id="@+id/editTxtGSLDetailContactFullName"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="FULL NAME"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLDetailEmailLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLDetailEmail"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="EMAIL ADDRESS"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="textEmailAddress"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLDetailMobileLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLDetailMobile"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="MOBILE NUMBER"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:layout_marginBottom="16dp"
								android:id="@+id/txtGSLDetailAddressLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLDetailAddress"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="PREMISES ADDRESS"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text|textMultiLine"
									android:maxLines="10"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:id="@+id/gslTenantInfoLinearLayout">
					<TextView
						android:id="@+id/txtGSLTenantInfoTitle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="16dp"
						android:layout_weight="1"
						android:text="Your Tenant Information"
						android:textAllCaps="false"
						android:textColor="@color/powerBlue"
						android:textSize="16dp" />
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:background="@color/white"
						android:layout_marginTop="16dp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:orientation="vertical">
							<com.google.android.material.textfield.TextInputLayout
								android:layout_marginTop="16dp"
								android:id="@+id/txtGSLTenantInfoFullNameLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small">
								<EditText
									android:id="@+id/editTxtGSLTenantInfoFullName"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="FULL NAME"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLTenantInfoEmailLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLTenantInfoEmail"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="EMAIL ADDRESS"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="textEmailAddress"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLTenantInfoMobileLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp"
								android:layout_marginBottom="16dp">
								<EditText
									android:id="@+id/editTxtGSLTenantInfoMobile"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="MOBILE NUMBER"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:id="@+id/gslIncidentInfoLinearLayout">
					<TextView
						android:id="@+id/txtGSLIncidentInfoTitle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="16dp"
						android:layout_weight="1"
						android:text="Incident Information"
						android:textAllCaps="false"
						android:textColor="@color/powerBlue"
						android:textSize="16dp" />
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:background="@color/white"
						android:layout_marginTop="16dp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:layout_marginBottom="16dp"
							android:orientation="vertical">
							<com.google.android.material.textfield.TextInputLayout
								android:layout_marginTop="16dp"
								android:id="@+id/txtGSLIncidentDateLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small">
								<EditText
									android:id="@+id/editTxtGSLIncidentDate"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="Date of Incident"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLIncidentTimeLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLIncidentTime"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="Time of Incident"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="textEmailAddress"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLRestorationDateLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp">
								<EditText
									android:id="@+id/editTxtGSLRestorationDate"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="Date of RESTORATION"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<com.google.android.material.textfield.TextInputLayout
								android:id="@+id/txtGSLRestorationTimeLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								app:errorEnabled="false"
								app:hintTextAppearance="@style/TextInputLayout.TextAppearance.Small"
								android:layout_marginTop="16dp"
								android:layout_marginBottom="16dp">
								<EditText
									android:id="@+id/editTxtGSLRestorationTime"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="@android:color/transparent"
									android:drawablePadding="6dp"
									android:enabled="false"
									android:focusable="false"
									android:hint="Time of Restoration"
									android:importantForAutofill="noExcludeDescendants"
									android:inputType="text"
									android:maxLines="1"
									android:paddingTop="5dp" />
							</com.google.android.material.textfield.TextInputLayout>
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical"
								android:background="@color/white"
								android:layout_marginTop="16dp"
								android:id="@+id/gslAttachmentLinearLayout">
								<TextView
									android:id="@+id/txtRequiredDocumentsTitle"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_weight="1"
									android:text="REQUIRED DOCUMENTS"
									android:textAllCaps="true"
									android:textColor="@color/silverChalice"
									android:textSize="9dp" />
								<androidx.recyclerview.widget.RecyclerView
									android:id="@+id/recyclerViewDocument"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:layout_marginTop="8dp"/>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
