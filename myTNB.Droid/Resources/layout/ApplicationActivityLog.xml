<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
              
                android:paddingTop="4dp"
                android:weightSum="1">
        <ImageView
                    android:id="@+id/imgstatus_required"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/activity_log_status_required"
                    android:background="@null"
                    android:layout_marginTop="16dp"
                   
                    android:layout_marginBottom="16dp"
                    android:layout_width="0dp" />

         <ImageView
                    android:id="@+id/imgstatus_Approval"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/activity_log_Awaiting_Approval"
                    android:background="@null"
                    android:layout_marginTop="16dp"
                   android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:layout_width="0dp" />

       
                <TextView
                    android:id="@+id/lbl_Status"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="18dp"
                    android:layout_weight="0.2"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/tunaGrey"
                    android:text="Status:" />
                <TextView
                    android:id="@+id/text_status"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="16dp"
                    android:layout_marginBottom="18dp"
                    android:layout_weight="0.6"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/tunaGrey"
                    android:text="Action Required" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_date_text"
                    android:textSize="10sp"
           
                    android:layout_marginTop="18dp"
                    android:textColor="#a6a6a6"
                    android:gravity="end"
                    tools:text="10 Jul 2020"
                />
            </LinearLayout>
          
    <TextView
                android:id="@+id/lbl_details"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hoverGrey"
                android:text="Updated Details" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="16dp"
                android:orientation="vertical">
             <ListView
                android:id="@+id/listview_updated_details"
                android:layout_width="fill_parent"
                android:listSelector="@android:color/transparent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
                
            </LinearLayout>
    <TextView
                android:id="@+id/lbl_comment"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hoverGrey"
                android:text="COMMENT:" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="32dp"
                android:orientation="vertical">
                <TextView
                android:id="@+id/lbl_comment_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14dp"
               
                android:textColor="#49494a"/>
            </LinearLayout>
    <TextView
                android:id="@+id/lbl_submittedby"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hoverGrey"
                android:text="SUBMITTED BY" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical">
                <TextView
                android:id="@+id/lbl_submittedby_email"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14dp"
               
                android:textColor="#49494a"
                android:text="careline@tnb.com.my" />
            </LinearLayout>
      <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
               
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_display_location"
                android:id="@+id/activityLogLine"
                android:background="@color/platinumGrey" />
</LinearLayout>
