<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:descendantFocusability="beforeDescendants"
    android:theme="@style/Theme.SMRApplication"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        id="@+id/toolbar" />
    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        android:background="@color/greyBackground">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/filterDateNestedScrollView"
            android:fillViewport="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingStart="16dp"
                    android:background="@color/white"
                    android:id="@+id/filterDateMainLayour">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextInputLayout.TextAppearance.ColorFix"
                        android:id="@+id/txtInputLayoutFromDate"
                        android:layout_marginTop="10dp"
                        app:errorEnabled="true"
                        android:layout_marginRight="17dp">
                        <EditText
                            android:hint="From"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/card_exp"
                            android:id="@+id/txtFromDate"
                            android:textSize="16dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:paddingTop="5dp"
                            android:drawablePadding="6dp"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextInputLayout.TextAppearance.ColorFix"
                        android:id="@+id/txtInputLayoutToDate"
                        app:errorEnabled="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="17dp">
                        <EditText
                            android:hint="To"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/card_exp"
                            android:id="@+id/txtToDate"
                            android:textSize="16dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:paddingTop="5dp"
                            android:drawablePadding="6dp"
                            android:enabled="false"
                            android:focusable="false"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/white"
            android:layout_gravity="bottom">
         
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="1"
                android:background="@color/white">
                <Button
                    android:id="@+id/btnApplyFilter"
                    android:text="Apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    style="@style/Theme.PayButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
